<Window x:Class="QuanLyNhaHang.View.User"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Thông tin nhân viên" Height="700" Width="800" WindowStyle="ThreeDBorderWindow" WindowStartupLocation="CenterScreen">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="20" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="170" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border 
                VerticalAlignment="Center"
                Width="120"
                Height="120"
                CornerRadius="100"
                Background="Aqua"
                Grid.Column="0" 
                BorderThickness="2"
                BorderBrush="Black" />
            <StackPanel Grid.Column="1">
                <TextBlock 
                    Height="60"
                    Text="Tên nhân viên"
                    FontSize="30"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Left" 
                    Margin="0,20,0,0"/>
                <TextBlock 
                    Height="60"
                    Text="Nhân Viên"
                    FontSize="22"
                    FontStyle="Italic" Margin="0,15,0,0"
                    />
            </StackPanel>
            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,10">
                <Button 
                    Content="Cancel" 
                    Width="90" 
                    Background="White" 
                    Foreground="Black"/>
                <Button 
                    Content="Save" 
                    Width="90" 
                    Foreground="White"
                    Background="#1C3879"
                    Margin="20,0,0,0"/>
            </StackPanel>
        </Grid>
        <Separator 
            Grid.Row="1" 
            Margin="20,0,20,0" 
            Background="#1C3879"/>
        <TabControl 
                    Grid.Row="2"
                    Style="{StaticResource MaterialDesignTabControl}"
                    materialDesign:ShadowAssist.ShadowDepth="Depth0" 
                    Margin="20,0,20,20">
            <TabItem 
                Header="Thông tin cá nhân" 
                Cursor="Hand"
                IsSelected="True">
                <Grid/>
            </TabItem>
            <TabItem 
                Header="Thông tin tài khoản" 
                Cursor="Hand"
                Foreground="#1C3879">
                <Grid Background="White" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
